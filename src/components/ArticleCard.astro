---
interface Props {
  title: string;
  description: string;
  href: string;
}
const { title, href, description } = Astro.props;
---
<a href={href} class="article-card-link group">
  <div class="bg-card p-8 rounded-2xl border border-DEFAULT h-full transition-all duration-300 hover:border-primary hover:shadow-xl hover:shadow-primary/10 hover:-translate-y-2">
    <h3 class="text-2xl font-bold text-DEFAULT">{title}</h3>
    <p class="text-muted mt-4 mb-6 flex-grow">{description}</p>
    <div class="font-bold text-accent group-hover:underline">
      Read More &rarr;
    </div>
  </div>
</a>