---
interface Props {
  title: string;
  description: string;
  href: string;
}
const { title, href, description } = Astro.props;
---
<a href={href} class="article-card-link">
  <div class="bg-neutral-800 p-8 rounded-2xl border border-neutral-700 h-full transition-all duration-300 hover:border-primary hover:shadow-xl hover:shadow-primary/10 hover:-translate-y-2">
    <h3 class="text-2xl font-bold text-neutral-100">{title}</h3>
    <p class="text-neutral-300 mt-4 mb-6 flex-grow">{description}</p>
    <div class="font-bold text-accent">
      Read More &rarr;
    </div>
  </div>
</a>