---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
  description?: string; // Added for SEO
}

const { 
  title, 
  description = "Swiftel Fibre - Empowering Internet Generation with high-speed, reliable fibre internet." 
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logos/logo-icon-only.svg" />
    <title>{title}</title>

    <script is:inline>
      if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>

  </head>
  <body class="bg-DEFAULT text-DEFAULT font-sans flex flex-col min-h-screen">
    <Header />
    <main class="flex-grow flex flex-col">
      <slot />
    </main>
    <Footer />
  </body>
</html>