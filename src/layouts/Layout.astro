---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Swiftel Fibre - Empowering Internet Generation" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logos/logo-icon-only.svg" />
    <title>{title}</title>
    <script is:inline>
      if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  <body class="bg-[rgb(var(--color-bg))] text-[rgb(var(--color-text))] font-sans flex flex-col min-h-screen">
    <Header />
    <main class="flex-grow flex flex-col">
      <slot />
    </main>
    <Footer />
  </body>
</html>