---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.svelte';

const socialLinks = [
  { name: "Facebook", href: "https://facebook.com/Geoffreynganga.co.ke" },
  { name: "Instagram", href: "https://instagram.com/swiftel.fibre" },
  { name: "TikTok", href: "https://tiktok.com/@swiftel.fibre" },
  { name: "WhatsApp", href: "https://wa.me/254111250055" }
];
---
<Layout 
  title="Contact Us | Swiftel Fibre"
  description="Get in touch with Swiftel Fibre. Call us, send us an email, or fill out the contact form. We're here to help you get connected."
>
  <section class="py-10 lg:py-16">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-5xl font-extrabold text-DEFAULT">Get in Touch</h1>
          <p class="text-lg text-muted mt-4">
            Have questions or ready to get connected? We're here to help.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 bg-card/50 border border-DEFAULT p-6 md:p-8 rounded-2xl">
          <div class="space-y-8">
            <div>
              <h3 class="text-2xl font-bold text-primary">Contact Details</h3>
              <p class="text-muted mt-2">
                Reach out to us through any of the following channels.
              </p>
            </div>

            <div class="space-y-4">
              <div class="flex items-center gap-4">
                <div class="bg-primary/20 p-3 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" class="w-6 h-6 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102A1.125 1.125 0 0 0 5.852 2H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                  </svg>
                </div>
                <a href={socialLinks.find(s => s.name === "WhatsApp")?.href} class="text-lg text-DEFAULT hover:text-primary transition-colors">
                  +254 111 250055
                </a>
              </div>
              <div class="flex items-center gap-4">
                <div class="bg-primary/20 p-3 rounded-full flex items-center justify-center">
                   <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15A2.25 2.25 0 0 0 2.25 6.75m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                  </svg>
                </div>
                <a href="mailto:swiftytelk@gmail.com" class="text-lg text-DEFAULT hover:text-primary transition-colors">
                  swiftytelk@gmail.com
                </a>
              </div>
            </div>

            <div>
              <h3 class="text-xl font-bold text-primary mt-6 mb-4">Follow Us</h3>
              <div class="flex items-center gap-6">
                <a href={socialLinks.find(s => s.name === "Facebook")?.href} target="_blank" class="text-muted hover:text-primary transition-transform duration-300 hover:scale-125 active:animate-wiggle" aria-label="Facebook">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-7 h-7">
                    <path d="M12 2C6.486 2 2 6.486 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987H8.078v-2.89h2.36V9.845c0-2.332 1.393-3.62 3.523-3.62 1.02 0 2.087.182 2.087.182v2.29h-1.176c-1.162 0-1.525.721-1.525 1.46v1.751h2.594l-.414 2.89h-2.18v6.987C18.343 21.128 22 16.991 22 12c0-5.514-4.486-10-10-10z"/>
                  </svg>
                </a>
                <a href={socialLinks.find(s => s.name === "Instagram")?.href} target="_blank"
                   class="text-muted hover:text-primary transition-transform duration-300 hover:scale-125 active:animate-wiggle" aria-label="Instagram">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor"
                       stroke-width="2" viewBox="0 0 24 24" class="w-6 h-6">
                    <rect x="3" y="3" width="18" height="18" rx="5" ry="5"/>
                    <circle cx="12" cy="12" r="4"/>
                    <circle cx="17.2" cy="6.8" r="0.6" fill="currentColor"/>
                  </svg>
                </a>
                <a href={socialLinks.find(s => s.name === "TikTok")?.href} target="_blank" class="text-muted hover:text-primary transition-transform duration-300 hover:scale-125 active:animate-wiggle" aria-label="TikTok">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
                     <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <div>
            <h3 class="text-2xl font-bold text-primary mb-4">Send us a Message</h3>
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>