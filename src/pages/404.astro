---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found | Swiftel Fibre">
  <section class="h-full flex flex-col justify-center items-center text-center py-12 px-6">
    <div class="max-w-md mx-auto">
      <h1 class="text-8xl lg:text-9xl font-extrabold text-primary glitch-text" data-text="404">
        404
      </h1>
      <p class="text-2xl lg:text-3xl font-bold text-neutral-100 mt-4">
        Page Not Found
      </p>
      <p class="text-lg text-neutral-300 mt-6">
        The page you're looking for doesn't exist, has been moved, or is temporarily offline.
      </p>
      <div class="mt-10">
        <a href="/" class="inline-block bg-accent hover:bg-accent-dark text-neutral-900 font-bold py-3 px-8 rounded-lg text-lg transition-colors">
          &larr; Go Back Home
        </a>
      </div>
    </div>
  </section>
</Layout>