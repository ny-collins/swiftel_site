---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.svelte';
import ScrollReveal from '../components/ScrollReveal.astro';
import WhySwiftel from '../components/WhySwiftel.astro';
import PackagesSection from '../components/PackagesSection.svelte';
import SpeedComparison from '../components/SpeedComparison.svelte';
import Testimonials from '../components/Testimonials.svelte';
import CoverageMap from '../components/CoverageMap.svelte';
import FAQ from '../components/FAQ.svelte';
import ContactForm from '../components/ContactForm.svelte';
import FloatingContact from '../components/FloatingContact.svelte';
---

<BaseLayout
        title="Swiftel Fibre - Lightning Fast Broadband"
        description="Experience pure fibre optic broadband with speeds up to 1Gbps. No contracts. No compromises. Join thousands of happy customers today."
>
    <!-- Hero Section with typing animation -->
    <Hero client:load />

    <!-- Why Swiftel Section -->
    <ScrollReveal animation="fadeInUp">
        <WhySwiftel />
    </ScrollReveal>

    <!-- Speed Comparison -->
    <SpeedComparison client:visible />

    <!-- Packages Section -->
    <ScrollReveal animation="fadeInUp">
        <div id="packages">
            <PackagesSection client:visible />
        </div>
    </ScrollReveal>

    <!-- Coverage Map / Availability Checker -->
    <CoverageMap client:visible />

    <!-- Testimonials -->
    <Testimonials client:visible />

    <!-- FAQ Section -->
    <FAQ client:visible />

    <!-- Contact Form -->
    <ScrollReveal animation="scaleIn">
        <div id="contact" class="py-20 bg-bg">
            <div class="container mx-auto px-4">
                <div class="text-center mb-12">
                    <h2 class="text-4xl md:text-5xl font-bold mb-4">
                        Get in <span class="gradient-text">Touch</span>
                    </h2>
                    <p class="text-xl text-muted max-w-2xl mx-auto">
                        Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
                    </p>
                </div>
                <div class="max-w-2xl mx-auto">
                    <ContactForm client:visible />
                </div>
            </div>
        </div>
    </ScrollReveal>

    <!-- Floating Contact Button -->
    <FloatingContact client:load />
</BaseLayout>